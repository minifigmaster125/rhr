<!DOCTYPE html>
<html>
<head>
  <title>Rhr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
 
</head>
<body>
		
<div id = 'layout'>
				
		<%= render 'layouts/header' %>
		
		<div class = "container">
			<center><% flash.each do |key, value| %>
            	<div class="flash <%= key %>"><%= value %></div>
			<% end %></center>
				
			<%= yield %>
		</div>
</div>	
<%= render 'layouts/footer' %>
	

</body>

</html>
